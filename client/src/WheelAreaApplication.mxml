<?xml version="1.0"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:s="library://ns.adobe.com/flex/spark"
    creationComplete="initializeWheelArea()">
    <fx:Script>
        <![CDATA[
            import flash.display.*;
            import flash.events.*;

            private function initializeWheelArea(): void {
                this.addEventListener(Event.ADDED_TO_STAGE, function(event: Event): void {
                    stage.align = StageAlign.BOTTOM;
                    stage.scaleMode = StageScaleMode.SHOW_ALL;
                });
            }
        ]]>
    </fx:Script>
    <s:layout>
       <s:VerticalLayout/>
    </s:layout>
    <s:Panel width="100%" height="100%" title="Wheel Area">
        <s:Label text="Hello World" fontWeight="bold" fontSize="24"/>
    </s:Panel>
</s:Application>